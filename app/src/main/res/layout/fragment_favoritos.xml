<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.Favoritos.fragment_favoritos">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFavoritos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/tarjeta_recuerdo"
        android:tooltipText="@string/noFavoritos"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/boton_crear_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        app:srcCompat="@drawable/boton_mas"
        android:clickable="true"
        android:layout_marginEnd="10dp"
        app:backgroundTint="@android:color/holo_red_dark"
        android:layout_marginBottom="10dp"
        app:borderWidth="0dp"
        android:focusable="true" />

</FrameLayout>